<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet-mapping>
    	<servlet-name>RegistrationServlet</servlet-name>
    	<url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.boots.back.RegistrationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/Login/LoginInTo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/Login/LogOut</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.boots.back.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>MainServlet</servlet-name>
    	<url-pattern>/MainPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>MainServlet</servlet-name>
    	<url-pattern>/MainPage/Search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.boots.back.MainServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>AdvertisementServlet</servlet-name>
    	<url-pattern>/Advertisement/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>AdvertisementServlet</servlet-name>
    	<url-pattern>/Advertisement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdvertisementServlet</servlet-name>
        <servlet-class>com.boots.back.AdvertisementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>ChatServlet</servlet-name>
    	<url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>com.boots.back.ChatServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>TagsServlet</servlet-name>
    	<url-pattern>/getTags</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TagsServlet</servlet-name>
        <servlet-class>com.boots.back.TagsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
    	<servlet-name>MessageServlet</servlet-name>
    	<url-pattern>/Message/load</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>MessageServlet</servlet-name>
    	<url-pattern>/Message/getNew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>MessageServlet</servlet-name>
    	<url-pattern>/Message/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>com.boots.back.MessageServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>StaticResourceServlet</servlet-name>
        <servlet-class>com.boots.ResourceServlet.StaticResourceServlet</servlet-class>
    </servlet>
    
</web-app>